<!DOCTYPE html>
<html>
	<head>
	  <title><%= content_for?(:title) ? yield(:title) : "My Vendor Reviews" %></title>
	  <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "My Vendor Reviews" %>">
	  <%= stylesheet_link_tag "application", :media => "all" %>
	  <%= javascript_include_tag "application" %>
	  <%= csrf_meta_tags %>
		<!--[if lt IE 9]>
		<script src="assets/html5shiv.js"></script>
		<![endif]-->
	  <%= yield(:head) %>
	</head>	
	<body>
	<%= render "layouts/header"%>
	<div class="container">
	<% flash.each do |key, value| %>
		<div class="alert alert-<%= key %>"><%= value %></div>
	<% end %>
	<%= yield %>
	<%= debug(params) if Rails.env.development? %>
	</div>
	</body>
</html>
